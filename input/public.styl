 filter:alpha(opacity=40); 针对 IE8 以及更早的版本 */
 body{
 	font-size: 16Px;
 }

.header
	text-align center
	color #333
	line-height 1
	border-bottom 1Px solid #D9D9D9
	.total
		h2
			padding 20px 0
			font-size 11px
		.minus
			padding-bottom 20px
			font-size 40px
			.nuit
				font-size 11px
	.wrap
		padding 0 40px
		display -webkit-flex
		display -moz-flex
		display -ms-flex
		display -o-flex
		display flex
		justify-content space-between
		flex-wrap wrap
		padding-bottom 15px
		font-size 11px
		color #333
		line-height 1
		h3
			padding-bottom 10px
		.value
			font-size 24px
.mian
	display block
	border-top 10Px solid #EAEBF0
	color #333
	line-height 1
	background #fff
	hgroup.item
		position relative
		&.active
			.menu-toggle
				background-image url('../img/icon-closeup@2x.png')
			.content
				display block
		&+hgroup.item
			border-top 1Px solid #EAEBF0
	.title
		padding 6px 0 14px
		h3
			padding 12px 0 12px 40px
			font-size 16px
			background url('../img/icon-timer@2x.png') 18px center/14px auto no-repeat
			span
				font-size 11px
				padding-left 10px
	.more-info
		display -webkit-flex
		display -moz-flex
		display -ms-flex
		display -o-flex
		display flex
		padding 0 100px 0 40px
		font-size 11px
		line-height 20px
		justify-content space-between
		text-align left
		.item
			flex 0 0 30%
			&:nth-child(1)
				flex 0 0 30%
			&:nth-child(2)
				flex 0 0 30%
			&:nth-child(3)
				flex 0 0 40%
	.content
		display none
		img
			display block
			width 100%
	.toogle
		position absolute
		top 18px
		right 15px
		width 16px
		height 16px
		background url('../img/icon-closedown@2x.png') center center/100% 100% no-repeat
		transition 0.3s
		&.active
			background-image url('../img/icon-closeup@2x.png')
	.content
		position relative
		.toogle
			top auto
			bottom 18px
